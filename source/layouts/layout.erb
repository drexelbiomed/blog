<head>
	<meta charset="utf-8" />
  <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
  <title>Blog Title<%= ' - ' + current_article.title unless current_article.nil? %></title>
  <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
	<link href='http://fonts.googleapis.com/css?family=Work+Sans' rel='stylesheet' type='text/css'>
	<%= stylesheet_link_tag "normalize", "all" %>
	<%= yield_content :styles %>

	<%= javascript_include_tag  "main" %>
	<%= yield_content :js %>
</head>
<body>
	<script>
		jQuery('body:not(.js)').addClass('js');
	</script>

	<div id="main" role="main">
		<%= partial "partials/nav" %>
		<%= yield %>
		<%= partial "partials/footer" %>
	</div>
</body>
